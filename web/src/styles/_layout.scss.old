body {
    @media (min-width:45rem) {
        &:before {
        content: "Carlos";
        font-size: 100%;
        text-align: left;
        transform:scale(90);
        display:inline-block;
        position:fixed;
        top:40%;
        left:0;
        z-index:-1;
        }        
    }
    
    @media (min-width:44rem) {
        max-width:100%;
        min-width:100%;
        height:auto;
    }
}

#main {
    display:flex;
    flex-flow: row;
    @media (min-width:45rem) {
        &::before {
            top: 0;
            content: '';
            display: block;
            height: 100%;
            left: -30%;
            right:0;
            position: absolute;
            transform: skewX(9deg);
            transform-origin: 0;
            background-color: rgba($blue, 0.8);
            z-index: -1;
            width: 60%;
        }
        
        &::after {
            top: 0;
            content: '';
            display: block;
            height: 100%;
            right:-10%;
            position: absolute;
            transform: skewX(9deg);
            transform-origin: 0;
            background-color: #fff;
            z-index: -1;
            width: 79%;
        }
    }
    
    @media (max-width: 44rem) {
        &::before {
            content: '';
            position: absolute;
            top: 0;
            display: block;
            height: 5rem;
            left: 0;
            right:0;
            transform: skewY(-20deg);
            transform-origin: 0 100%;
            background-color: $blue;
            z-index: 4;
        }
        
        
    }
    
    .lefty {
        @media (min-width:45rem) {
            width:30%;
            height:100%;
            position:absolute;
            top:0;
            left:0;
            display:flex;
            align-items:center;
            justify-content:center;
        }
        @media (max-width:44rem) {
            display:flex;
            flex-flow:column;
            align-items:center;
            justify-content:center;
            opacity:0;
            position:absolute;
            top:0;
            left:0;
            width:0;
            height:30%;
            background-color:$blue;
            transform-origin: 50% 50%;
            transform:rotate(-15deg);
            transition: height 1s, transform 1s, transform-origin 1s;
            z-index:3;
        }
    }
    
    
    &.navigation {
     @media (max-width:44rem) {
        
     }
        .lefty {
            
            @media (max-width:44rem) {
                opacity:1;
                display:flex;
                flex-flow:column;
                align-items:center;
                justify-content:center;
                width:100%;
                height:100%;
                background-color:$blue;
                z-index:3;
                transform-origin: 50% 50%;
                transform:rotate(0deg);
                transition: height 1s, transform 1s, transform-origin 1s;
            }
        }
    }
    
   
    .righty {
        width: 65%;
        height: 100%;
        display: flex;
        flex-flow: row wrap ;
        position: absolute;
        top: 0;
        right: 0;
        display:flex;
        align-items:center;
        justify-content:center;
        overflow-y: scroll;
        overflow-x: hidden;
        @media (max-width: 75rem) {
             align-items:center;
        }
        @media (max-width:45rem) {
            width:100%;
            max-width:100%;
            position:static;
            display:block;
            overflow-y:auto;
            margin:1.5rem;
        }
    }
}

#burger {
    background:none;
    border:none;
    outline:none;
    @media (min-width: 44rem) {
        display:none;
    }
    @media (max-width: 43rem) {
        display:block;
        position:absolute;
        top:0.6rem;
        left:0.6rem;
        width:2rem;
        height:2rem;
        color:#fff;
        font-size:1rem;
        z-index:4;
    }
}


footer {
    padding: 1.5em;
}
