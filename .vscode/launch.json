{
  "version": "0.0.2",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Back",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/back",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "HOST": "localhost",
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "runtimeArgs": ["start"]
    },
    {
      "name": "Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/web/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Web Server",
      "program": "${workspaceFolder}/web/server/index.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Hub",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/hub/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}