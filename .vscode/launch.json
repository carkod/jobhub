{
  "version": "0.0.2",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Back",
      "runtimeExecutable": "${workspaceFolder}/back/node_modules/.bin/babel-node",
      "program": "${workspaceFolder}/back/src/server.js",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "HOST": "localhost",
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/web/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Hub",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/hub/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}