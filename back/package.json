{
  "name": "back",
  "version": "1.0.0",
  "description": "Back-end application for Jobhub",
  "main": "server.js",
  "scripts": {
    "start": "yarn run watch-sass & nodemon --exec babel-node -- src/server.js",
    "watch-sass": "sass --watch src/pdf/styles/:src/pdf/assets/",
    "build-js": "babel src --copy-files --extensions .js --ignore pdf/styles --out-dir dist",
    "build-sass": "sass src/pdf/styles/:dist/pdf/styles/",
    "build": "yarn run build-js && yarn run build-sass",
    "production": "node dist/server.js",
    "clean": "rm -rf docs node_modules dist src/pdf/assets"
  },
  "keywords": [
    "back-end",
    "mongoose",
    "mongodb",
    "expressjs"
  ],
  "author": "Carlos Wu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.25.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.2.0",
    "express-react-views": "^0.11.0",
    "express-validator": "^6.1.0",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongo-sanitize": "^1.1.0",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.8",
    "mongoose-slug-updater": "^3.2.3",
    "multer": "^1.4.2",
    "puppeteer": "^13.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.49.0",
    "semantic-ui-css": "^2.4.1",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-flow-strip-types": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.0.0",
    "nodemon": "^2.0.6"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/transform-runtime",
      "@babel/plugin-transform-flow-strip-types"
    ]
  }
}
