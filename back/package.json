
{
  "name": "back",
  "version": "1.0.0",
  "description": "Back-end application for Jobhub",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all -p watch-sass start-js",
    "start-js": "nodemon --exec babel-node -- src/server.js",
    "watch-sass": "node-sass --watch src/pdf/styles/ -o src/pdf/assets/ src/pdf/styles/",
    "build-js": "babel src --copy-files --extensions .js --ignore pdf/styles --out-dir dist  --presets es2015",
    "build-sass": "node-sass -o dist/pdf/assets -x --output-style compressed src/pdf/styles/",
    "build": "npm-run-all -p build-js build-sass",
    "production": "node dist/server.js",
    "deploy": "scp -r src/ root@188.166.92.221:/var/www/carloswu.xyz/back/",
    "debug": "start-js"
  },
  "keywords": [
    "back-end",
    "mongoose",
    "mongodb",
    "expressjs"
  ],
  "author": "Carlos Wu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "draft-js": "^0.10.5",
    "express": "^4.17.1",
    "express-react-views": "^0.11.0",
    "express-validator": "^6.1.0",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongodb": "^3.2.7",
    "mongoose": "^5.6.2",
    "mongoose-slug-generator": "^1.0.4",
    "multer": "^1.4.1",
    "node-sass": "^4.12.0",
    "prop-types": "^15.7.2",
    "querystring": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-ui-css": "^2.4.1",
    "shortid": "^2.2.14",
    "wkhtmltopdf": "^0.3.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5"
  },
  "babel": {
