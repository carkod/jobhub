{
  "name": "back",
  "version": "1.0.0",
  "description": "Back-end application for Jobhub",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all -p watch-sass start-js",
    "start-js": "nodemon --exec babel-node -- src/server.js",
    "watch-sass": "node-sass --watch src/pdf/styles/ -o src/pdf/assets/ src/pdf/styles/",
    "build-js": "babel src/*.js -d dist/. --presets es2015",
    "build-sass": "node-sass -o dist/pdf/assets -x --output-style compressed src/pdf/styles/index.scss",
    "build": "npm-run-all -p build-js build-sass",
    "production": "node dist/server.js"
  },
  "keywords": [
    "back-end",
    "mongoose",
    "mongodb",
    "expressjs"
  ],
  "author": "Carlos Wu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.15.2",
    "cors": "^2.8.4",
    "draft-js": "^0.10.4",
    "express": "^4.15.2",
    "express-react-views": "^0.10.5",
    "express-validator": "^3.2.0",
    "moment": "^2.20.1",
    "mongodb": "^2.2.26",
    "mongoose": "^4.11.5",
    "multer": "^1.3.0",
    "node-sass": "^4.7.2",
    "querystring": "^0.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-css": "^2.2.12",
    "shortid": "^2.2.8",
    "slug": "^0.9.1",
    "validator": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
