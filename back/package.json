{
  "name": "back",
  "version": "1.0.1",
  "description": "Back-end application for Jobhub",
  "main": "server.js",
  "scripts": {
    "start": "nodemon --exec babel-node -- src/server.js",
    "watch-sass": "node-sass --watch src/pdf/styles/ -o src/pdf/assets/ src/pdf/styles/",
    "build-js": "babel src --copy-files --extensions .js --ignore pdf/styles --out-dir dist",
    "build-sass": "node-sass -o dist/pdf/assets -x --output-style compressed src/pdf/styles/",
    "build": "npm run build-js && npm run build-sass",
    "production": "node dist/server.js"
  },
  "keywords": [
    "back-end",
    "mongoose",
    "mongodb",
    "expressjs"
  ],
  "author": "Carlos Wu",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "draft-js": "^0.11.6",
    "express": "^4.17.1",
    "express-react-views": "^0.11.0",
    "express-validator": "^6.1.0",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongodb": "^3.2.7",
    "mongoose": "^5.6.2",
    "mongoose-slug-generator": "^1.0.4",
    "multer": "^1.4.1",
    "node-sass": "^5.0.0",
    "prop-types": "^15.7.2",
    "querystring": "^0.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "semantic-ui-css": "^2.4.1",
    "shortid": "^2.2.14",
    "wkhtmltopdf": "^0.3.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-node": "0.0.1-security",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "nodemon": "^2.0.6 ",
    "npm-run-all": "^4.1.5"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
