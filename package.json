{
    "name": "jobhub",
    "version": "1.0.0",
    "description": "Full Stack application for Jobhub",
    "main": "server.js",
    "scripts": {
        "start": "npm-run-all -p back hub web",
        "back": "npm-run-all -p back:watch-sass back:start-js",
        "back:start-js": "nodemon --exec babel-node --ignore hub -- back/src/server.js",
        "back:watch-sass": "node-sass --watch back/src/pdf/styles/ -o back/src/pdf/assets/ back/src/pdf/styles/",
        "back:build-js": "babel back/src --copy-files --extensions .js --ignore pdf/styles --out-dir back/dist  --presets es2015",
        "back:build-sass": "node-sass -o back/dist/pdf/assets -x --output-style compressed back/src/pdf/styles/",
        "back:build": "npm-run-all -p back:build-js back:build-sass",
        "back:production": "node back/dist/server.js",
        "back:deploy": "scp -r back/src/ root@188.166.92.221:/var/www/carloswu.xyz/back/",
        "back:debug": "start-js",
        "hub": "cd hub/ && react-scripts start",
        "hub:start-win": "set PORT=8082 && react-scripts start",
        "hub:build": "cd hub/ && react-scripts build",
        "hub:test": "react-scripts test --env=jsdom",
        "hub:eject": "react-scripts eject",
        "hub:deploy": "npm run hub:build && scp -r hub/build/ root@188.166.92.221:/var/www/carloswu.xyz/hub/",
        "web": "cd web/ && npm-run-all -p web:watch-css web:start-js",
        "web:build-css": "cd web && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
        "web:watch-css": "npm run web:build-css && cd web/ && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "web:start-js": "cd web/ && react-scripts start",
        "web:build-js": "cd web/ && react-scripts build",
        "web:build": "npm-run-all web:build-css web:build-js",
        "web:test": "react-scripts test --env=jsdom",
        "web:eject": "react-scripts eject",
        "web:deploy": "scp -r web/build/ root@188.166.92.221:/var/www/carloswu.xyz/web/"
    },
    "keywords": [
        "back-end",
        "mongoose",
        "mongodb",
        "expressjs",
        "front-end",
        "react"
    ],
    "author": "Carlos Wu",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-register": "^6.26.0",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "draft-js": "^0.11.0",
        "draft-js-export-html": "^1.3.3",
        "express": "^4.17.1",
        "express-react-views": "^0.11.0",
        "express-validator": "^6.1.1",
        "fsevents": "^2.0.7",
        "helmet": "^3.18.0",
        "ignore-styles": "^5.0.1",
        "jsonwebtoken": "^8.5.1",
        "loadash": "^1.0.0",
        "lodash": "^4.17.14",
        "moment": "^2.24.0",
        "mongodb": "^3.2.7",
        "mongoose": "^5.6.4",
        "mongoose-slug-generator": "^1.0.4",
        "multer": "^1.4.1",
        "node-sass": "^4.12.0",
        "node-sass-chokidar": "1.3.5",
        "npm-run-all": "^4.1.2",
        "prop-types": "^15.7.2",
        "querystring": "^0.2.0",
        "react": "^16.8.6",
        "react-addons-update": "^15.6.2",
        "react-dom": "^16.8.6",
        "react-helmet": "^5.2.1",
        "react-pdf": "^4.1.0",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "react-rte": "^0.16.1",
        "react-scripts": "3.0.1",
        "react-transition-group": "^4.2.1",
        "redux": "^4.0.4",
        "redux-thunk": "^2.3.0",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.87.3",
        "shortid": "^2.2.14",
        "wkhtmltopdf": "^0.3.4"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2016": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "nodemon": "^1.19.1",
        "babel-polyfill": "^6.26.0",
        "redux-devtools-extension": "^2.13.8"
    },
    "babel": {
        "presets": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "plugins": [
            "transform-es2015-modules-commonjs"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
